
@{
    ViewBag.Title = "Catálogo Ausencias";
}


<div class="container">
    <div class="row mt-2">
        <h3>@ViewBag.Message</h3>
    </div>


    <div class="row justify-content-center">
        <div class="col-6 mt-2 ">
            <div class="card" style="background-color: #FAFAFA">
                <div class="card-header">
                    <h5 class="card-tittle">Añadir nueva ausencia</h5>
                </div>

                <div class="card-body">
                    <form>
                        <div class="form-group d-flex justify-content-between">
                            <label class="font-weight-normal" for="motivoA">Motivo:</label>
                            <input type="text" class="form-control form-control-sm" id="motivoA" placeholder="Ingrese motivo de ausencia" required>
                        </div>

                        <div class="row justify-content-center mt-2">
                            <button type="submit" class="btn btn-primary btn-sm">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>






    <div class="row mt-3">
        <div class="col-12">
            <div class="d-flex justify-content-between mt-3">
                <div class="col-6">
                    <input type="search"  id="searchInput" placeholder="Buscar" class="form-control form-control-sm">
                </div>
                <div>
                    <input type="button" value="Reporte" class="btn btn-secondary btn-sm">
                </div>
            </div>
            <table id="example1" class="table table-bordered table-hover">
                <thead class="thead-dark text-center">
                    <tr>
                        <th>Motivo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody id="contenidoTabla">
                    <tr>
                        <td>Enferdedad</td>
                        <td class="d-flex justify-content-center">
                            <a data-toggle="modal" data-target="#modal-editar" href="#"> <i class="fas fa-edit text-dark" style="font-size: 1.2em;"></i></a>
                            <a onclick="eliminar('¿Seguro?','Está acción es irreversible')" href="#"> <i class="fas fa-trash text-dark" style="font-size: 1.2em;"></i></a>
                        </td>
                    </tr>
                    <tr>
                        <td>Embarazo</td>
                        <td class="d-flex justify-content-center">
                            <a data-toggle="modal" data-target="#modal-editar" href="#"> <i class="fas fa-edit text-dark" style="font-size: 1.2em;"></i></a>
                            <a onclick="eliminar('¿Seguro?','Está acción es irreversible')" href="#"> <i class="fas fa-trash text-dark" style="font-size: 1.2em;"></i></a>
                        </td>
                    </tr>
                    <tr>
                        <td>Discapacidad</td>
                        <td class="d-flex justify-content-center">
                            <a data-toggle="modal" data-target="#modal-editar" href="#"> <i class="fas fa-edit text-dark" style="font-size: 1.2em;"></i></a>
                            <a onclick="eliminar('¿Seguro?','Está acción es irreversible')" href="#"> <i class="fas fa-trash text-dark" style="font-size: 1.2em;"></i></a>
                        </td>
                    </tr>
                    <tr>
                        <td>Vacaciones</td>
                        <td class="d-flex justify-content-center">
                            <a data-toggle="modal" data-target="#modal-editar" href="#"> <i class="fas fa-edit text-dark" style="font-size: 1.2em;"></i></a>
                            <a onclick="eliminar('¿Seguro?','Está acción es irreversible')" href="#"> <i class="fas fa-trash text-dark" style="font-size: 1.2em;"></i></a>
                        </td>
                    </tr>
                    <tr>
                        <td>Injustificada</td>
                        <td class="d-flex justify-content-center">
                            <a data-toggle="modal" data-target="#modal-editar" href="#"> <i class="fas fa-edit text-dark" style="font-size: 1.2em;"></i></a>
                            <a onclick="eliminar('¿Seguro?','Está acción es irreversible')" href="#"> <i class="fas fa-trash text-dark" style="font-size: 1.2em;"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>









    <!-- Modal de editar -->


    <div class="modal fade" id="modal-editar">
        <div class="modal-dialog">
            <div class="modal-content">
                <form>
                    <div class="modal-header">
                        <h4 class="modal-title">Modificar Ausencia</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <div class="form-group ">
                            <label class="font-weight-normal" for="motivo">Motivo:</label>
                            <input type="text" class="form-control form-control-sm" id="motivo" required>
                        </div>

                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <div>
                            <input type="submit" class="btn btn-info" value="Editar">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="@Url.Content("~/Scripts/js/scriptsCatalogoAusencias.js")"></script>