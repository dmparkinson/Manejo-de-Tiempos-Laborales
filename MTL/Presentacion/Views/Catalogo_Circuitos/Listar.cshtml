
@{
    ViewBag.Title = "Catálogo Circuito";
}

<div class="container">
    <div class="row mt-2">
        <h3>@ViewBag.Message</h3>
    </div>


    <div class="row justify-content-center">
        <div class="col-6 mt-2 ">
            <div class="card" style="background-color: #FAFAFA">
                <div class="card-header">
                    <h5 class="card-tittle">Añadir nuevo circuito</h5>
                </div>

                <div class="card-body">
                    <div class="form-group d-flex justify-content-between">
                        <label class="font-weight-normal" for="nombre">Nombre:</label>
                        <input type="text" class="form-control form-control-sm" id="nombre" placelaceholder="Ingrese nombre" required>
                    </div>
                    <div class="row justify-content-center mt-2">
                        <button class="btn btn-primary btn-sm" onclick="alertDatosInvalidos()">Guardar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>






