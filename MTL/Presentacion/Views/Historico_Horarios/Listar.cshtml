                        <input type="time" class="form-control form-control-sm" id="hora">
                    </div>
                    <div class="form-group">
                        <label class="font-weight-normal" for="tiempo">Tiempo laboral:</label>
                        <select class="form-control form-control-sm" id="tiempo">
                            <option selected="selected">Entrada</option>
                            <option>Almuerzo</option>
                            <option>Salida</option>
                        </select>
                    </div>

                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <div>
                        <button type="button" class="btn btn-info">Editar</button>
                        <button type="button" class="btn btn-danger">Eliminar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

