<!-- Modal de editar -->


<div class="modal fade" id="modal-editar">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Modificar Horario</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


            <div class="modal-body">
                <div class="form-group ">
                    <label class="font-weight-normal" for="fecha">Fecha:</label>
                    <input type="date" class="form-control form-control-sm" id="fecha" required>
                </div>
                <div class="form-group">
                    <label class="font-weight-normal" for="hora">Hora:</label>
                    <input type="time" class="form-control form-control-sm" id="hora" required>
                </div>
                <div class="form-group">
                    <label class="font-weight-normal" for="tiempo">Tiempo laboral:</label>
                    <select class="form-control form-control-sm" id="tiempo" required>
                        <option selected="selected">Entrada</option>
                        <option>Almuerzo</option>
                        <option>Salida</option>
                    </select>
                </div>

            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <div>
                    <button class="btn btn-info" onclick="alertDatosValidos()">Editar</button>
                </div>
            </div>
        </div>
    </div>
</div>



